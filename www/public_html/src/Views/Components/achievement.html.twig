{% block achievement_wrapper %}
    <div class="flex flex-col justify-between bg-neutral-300 dark:bg-neutral-700 w-full pb-2 px-2">
        {% block achievement_body %}
            <div>
                <div class="flex mb-2">
                    <div style="background-image: url('{{ achievement.icon }}')" class="w-8 h-8 bg-cover flex-none transition-all"></div>
                    <div class="text-base line-clamp-1 px-2 pt-2" title="{{ achievement.display_name }}">{{ achievement.display_name }}</div>
                </div>
                {% if hide_description is null %}
                    <div class="text-xs line-clamp-2 hover:line-clamp-none dark:text-neutral-400 text-neutral-600 pb-2">
                        {% if not achievement.hidden %}
                            {{ achievement.description }}
                        {% else %}
                            <div>
                                <i class="fa-solid fa-eye-slash" title="hidden achievement"></i> |
                                {% if hide_action is null %}
                                    <a href="/games/edit.php?{{ { "achievementid": achievement.id }|url_encode }}">
                                        <i class="fa-solid fa-pen-to-square"></i> {{ achievement.description is not null ? 'Edit |' : 'Add description' }}
                                    </a>
                                {% endif %}
                                {{ achievement.description ?? 'n/a' }}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            </div>
        {% endblock %}
    </div>
{% endblock %}
