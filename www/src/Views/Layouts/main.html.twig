{% extends 'Layouts/base.html.twig' %}

{% block main_container %}
    <button onclick="toggleModal()" class="top-10 left-4 fixed hidden">Modal</button>
    <div id="modal" class="w-full h-full bg-neutral-950/40 fixed top-0 left-0 z-50 overflow-hidden hidden transition duration-300 ease-in opacity-0" onclick="toggleModal()">
        <div class="bg-neutral-700 top-10 relative w-1/3 float-right">
            <div class="p-2">Counter-Strike: Source</div>
        </div>
    </div>
    <main class="xl:max-w-screen-xl lg:mx-auto lg:max-w-screen-lg mx-3">
        {% block content %}{% endblock %}
    </main>
{% endblock %}
